<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="weblearns_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
            <div class="text-center" style="report_header_style;border-bottom: 1px solid black;">
                <div class="row">
                    <div class="col-3 mb4">
                        <img alt="img" t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                             style="max-height:90px"/>
                    </div>
                    <div class="col-3">
                        <p style="margin-top: 20px ; margin-left: 40px">Hello your patient content also you can print
                            .
                        </p>
                    </div>
                    <div class="col-6" style="text-align: right;">
                        <span t-if="company.company_details" t-field="company.company_details"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>
        <div class="footer">
            <div class="row text-center" style="border-top: 1px solid black;">
                <div class="col-4">
                    <span t-field="company.email"/>
                </div>
                <div class="col-4">
                    <span t-field="company.phone"/>
                    <br/>
                    <span t-field="company.mobile"/>
                </div>
                <div class="col-4">
                    <span t-field="company.website"/>
                </div>
            </div>
            <br/>
            <div class="row text-center">
                <p>Page :<span class="page"/>/
                    <span class="topage"/>
                </p>
            </div>
            <div style="text-align: right; ">
                <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y') +'    '+ context_timestamp(datetime.datetime.now()).strftime(' | %H:%M')"
                   style="font-size: 14px"/>
            </div>
        </div>

    </template>
    <template id="report_patient_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="patient">
                <t t-call="om_hospital.weblearns_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="col-12 text-center " style="border-bottom:1px solid black; ">
                            <img t-if="patient.patient_image"
                                 style="max-width: 200px; max-height: 200px; border-radius: 15px 50px 30px; "
                                 t-att-src="image_data_uri(patient.patient_image)"/>
                            <h2 t-field="patient.name" style="margin-bottom:15px;"/>
                        </div>
                        <div class="row" style="margin-top:10px ">
                            <div class="col-3 text-centre">
                                <strong>Patient Reference</strong>
                                <p t-field="patient.ref"/>
                            </div>
                            <div class="col-9" style="text-align: right;">
                                <strong>Patient Address</strong>
                                <p t-out="patient.address or 'Not Available.'"/>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-4">
                                <strong>Patient ID</strong>
                                <p t-field="patient.id"/>
                            </div>
                            <div class="col-4">
                                <strong>Patient Age</strong>
                                <p t-field="patient.age"/>
                            </div>
                            <div class="col-4">
                                <strong>Patient Gender</strong>
                                <p t-out="patient.gender or 'Not Available.'"/>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px ; border-bottom:1px solid black; padding-bottom:10px;">
                            <div class="col-3">
                                <strong>Is Child</strong>
                                <p t-field="patient.is_child"/>
                            </div>
                            <div class="col-9 text-center">
                                <strong>Notes:</strong>
                                <p t-out="patient.notes or 'Empty.'"/>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px ;">
                            <div class="col-12 text-center">
                                <strong>The Doctor :</strong>
                                <p t-out="patient.doctors_id.name or 'Not Available.'"/>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px ; border-bottom:1px solid black;padding-bottom:10px;">
                            <div class="col-6">
                                <strong>The Last Appointment:</strong>
                                <div>
                                    <t t-if="patient.last_appointment">
                                        <t t-esc="patient.last_appointment.strftime('%d/%m/%Y | %H:%M')"/>
                                    </t>
                                    <t t-else="not patient.last_appointment">Not Available.</t>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <strong>The previous Appointment:</strong>
                                <div>
                                    <t t-if="patient.previous_appointment">
                                        <t t-esc="patient.previous_appointment.strftime('%d/%m/%Y | %H:%M')"/>
                                    </t>
                                    <t t-else="not patient.previous_appointment">Not Available.</t>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <strong>
                            Appointment Details:
                        </strong>
                        <t t-if="patient.appointment_ids">
                            <table class="table table-sm o_main_table" name="appointment">
                                <thead>
                                    <tr>
                                        <th name="th_reference" style="text-align: left;">
                                            <span>Reference</span>
                                        </th>
                                        <th name="th_id" style="text-align: left;">
                                            <span>ID</span>
                                        </th>
                                        <th name="th_date" style="text-align: left;">
                                            <span>Date</span>
                                        </th>
                                        <th name="th_doctors" style="text-align: left;">
                                            <span>Doctors</span>
                                        </th>
                                        <th name="th_description" style="text-align: left;">
                                            <span>Description</span>
                                        </th>
                                        <th name="th_state" style="text-align: left;">
                                            <span>Status</span>
                                        </th>
                                    </tr>
                                </thead>
                                <t t-set="appointment_count" t-value="0"/>
                                <t t-foreach="patient.appointment_ids" t-as="line">
                                    <t t-set="appointment_count" t-value="appointment_count + 1"/>
                                    <tr>
                                        <td>
                                            <span t-field="line.ref"/>
                                        </td>
                                        <td>
                                            <span t-field="line.id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date"/>
                                        </td>
                                        <td>
                                            <span t-field="line.doctors_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.description"/>
                                        </td>
                                        <td>
                                            <span t-field="line.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </t>
                        <tr>
                            <td>
                                <strong>Total Appointments:</strong>
                            </td>
                            <td style="text-align: left;">
                                <t t-esc="appointment_count"/>
                            </td>
                        </tr>
                        <t t-if="not patient.appointment_ids">
                            <p>Not Available.</p>
                        </t>


                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="report_patient" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_hospital.report_patient_template</field>
        <field name="report_file">om_hospital.report_patient_template</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

</odoo>